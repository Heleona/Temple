import fs from 'fs';
import path from 'path';
import OpenAI from 'openai';

const client = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

export default async function handler(req, res) {
  try {
    // Lista alla filer i repo
    const files = fs.readdirSync(process.cwd(), { withFileTypes: true })
      .filter(f => f.isFile())
      .map(f => f.name)
      .slice(0, 200)
      .join('\n - ');

    // Prompt till Leon
    const planPrompt = `
    Du är Leon. Byggplan för våra appar (LETTERS, Heleona m.fl.).
    Filer i repo:
    - ${files}
    Skapa nästa steg i kod direkt, utan att fråga Michelle om lov.
    `;

    const completion = await client.chat.completions.create({
      model: "gpt-4o-mini",
      messages: [{ role: "user", content: planPrompt }],
    });

    const reply = completion.choices[0].message.content;

    res.status(200).json({ plan: reply });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
}
